@model UsuarioModel
@using SisºFut_SistemaOrganizacionalJogosdeFutsal.Enums

@{
    ViewData["Title"] = "Criar Usuário";
}

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<form asp-controller="Usuario" asp-action="Criar" method="post">
    <div class="container-formulario">
        <div class="form-card">

            <div class="titulo-container">
                <h1 class="titulo-centralizado">Cadastrar Usuário</h1>
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Nome do Time</label>
                <input type="text" asp-for="Name" class="form-control custom-input" placeholder="Digite o Nome" />
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>
       
            </div>

            <div class="form-group mb-4">
                <label class="form-label">E-mail</label>
                <input type="email" asp-for="Email" class="form-control custom-input" placeholder="Digite o Email" />
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Email)</span>
           
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Usuário</label>
                <input type="text" asp-for="Login" class="form-control custom-input" placeholder="Usuário" />
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Login)</span>


            </div>

            <div class="form-group mb-4">
                <label class="form-label">Tipo de Perfil</label>
                <select asp-for="Perfil" class="form-control custom-input">
                    <option selected>Selecione</option>
                    <option value="@PerfilEnum.Admin">Administrador</option>
                    <option value="@PerfilEnum.Padrao">Padrão</option>
                </select>
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Perfil)</span>
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Senha</label>
                <input type="password" asp-for="Senha" class="form-control custom-input" placeholder="Digite uma Senha" />
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Senha)</span>
            </div>

            <div class="d-flex justify-content-between mt-4 button-container">
                <a class="btn btn-custom" asp-controller="Usuario" asp-action="Index">Voltar</a>
                <button type="submit" class="btn btn-custom">Adicionar</button>
            </div>

        </div>
    </div>
</form>

<style>
    body {
        font-family: 'Courier New', Courier, monospace;
    }

    .container-formulario {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        width: 100%;
    }

    .form-card {
        border: 2px solid #ccc;
        padding: 35px;
        border-radius: 15px;
        background-color: white;
        box-shadow: 0 0.25rem 0.5rem rgba(0,0,0,0.1);
        width: 100%;
        max-width: 650px;
    }

    .titulo-centralizado {
        font-weight: bold;
        color: #37c3b4;
        text-align: center;
        margin-bottom: 30px;
    }

    .btn-custom {
        border: 1px solid #37c3b4;
        font-weight: bold;
        color: #37c3b4;
        background-color: transparent;
        transition: background-color 0.3s ease, color 0.3s ease;
        border-radius: 20px;
        padding: 10px 20px;
        width: 48%;
    }

        .btn-custom:hover {
            background-color: #37c3b4;
            color: white;
        }

    .custom-input {
        border-radius: 10px !important;
    }

    .button-container {
        gap: 10px;
    }

    @@media (max-width: 768px) {
        .form-card {
            padding: 20px;
        }

        .btn-custom {
            width: 100%;
            margin-bottom: 10px;
        }

        .button-container {
            flex-direction: column;
        }
    }
</style>
