@model UsuarioSemSenhaModel
@using SisºFut_SistemaOrganizacionalJogosdeFutsal.Enums

@{
    ViewData["Title"] = "Editar Usuário";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@TempData["MensagemErro"]</div>
}

<form asp-controller="Usuario" asp-action="Editar" method="post">
    <div class="container-formulario">
        <div class="form-card">
            <div class="titulo-container">
                <h1 class="titulo-centralizado">Editar Usuário</h1>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-4">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" asp-for="Name" class="form-control custom-input" placeholder="Digite o Nome">
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>
            </div>

            <div class="form-group mb-4">
                <label for="email" class="form-label">E-mail</label>
                <input type="email" asp-for="Email" class="form-control custom-input" placeholder="Digite o Email">
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Email)</span>
            </div>

            <div class="form-group mb-4">
                <label for="login" class="form-label">Login</label>
                <input type="text" asp-for="Login" class="form-control custom-input" placeholder="Digite o Login">
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Login)</span>
            </div>

            <div class="form-group mb-4 position-relative">
                <label for="perfil" class="form-label">Selecione tipo de Perfil</label>
                <div class="input-group">
                    <select asp-for="Perfil" class="form-control custom-input">
                        <option selected>Selecione</option>
                        <option value="@PerfilEnum.Admin">Administrador</option>
                        <option value="@PerfilEnum.Padrao">Padrão</option>
                    </select>

                </div>
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Perfil)</span>
            </div>

            <div class="d-flex justify-content-between mt-4 button-container">
                <a class="btn btn-custom" asp-controller="Usuario" asp-action="Index">Voltar</a>
                <button type="submit" class="btn btn-custom">Salvar</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}

<style>
    body {
        font-family: 'Courier New', Courier, monospace;
    }

    .container-formulario {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        width: 100%;
    }

    .form-card {
        border: 2px solid #ccc;
        padding: 35px;
        border-radius: 15px;
        background-color: white;
        box-shadow: 0 0.25rem 0.5rem rgba(0,0,0,0.1);
        width: 100%;
        max-width: 650px;
    }

    .titulo-centralizado {
        font-weight: bold;
        color: #37c3b4;
        text-align: center;
        margin-bottom: 30px;
    }

    .btn-custom {
        border: 1px solid #37c3b4;
        font-weight: bold;
        color: #37c3b4;
        background-color: transparent;
        transition: background-color 0.3s ease, color 0.3s ease;
        border-radius: 20px;
        padding: 10px 20px;
        width: 48%;
    }

        .btn-custom:hover {
            background-color: #37c3b4;
            color: white;
        }

    .custom-input {
        border-radius: 10px !important;
    }

    .button-container {
        gap: 10px;
    }

    @@media (max-width: 768px) {
        .form-card {
            padding: 20px;
        }

        .btn-custom {
            width: 100%;
            margin-bottom: 10px;
        }

        .button-container {
            flex-direction: column;
        }
    }
</style>
