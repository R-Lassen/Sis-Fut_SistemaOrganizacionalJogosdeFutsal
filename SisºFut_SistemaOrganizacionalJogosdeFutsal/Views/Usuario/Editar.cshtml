@using SisºFut_SistemaOrganizacionalJogosdeFutsal.Enums
@model UsuarioModel
@{
    ViewData["Title"] = "Editar Usuario";
}
<div class="text-center">

    <h1 class="display-4">Editar Usuário</h1>

</div>


<form asp-controller="Usuario" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome">
        @Html.ValidationMessageFor( x => x.Name)
    </div>

    <div class="form-group">
        <label for="email" class="form-label">E-mail</label>
        <input type="text"  asp-for="Email" class="form-control" placeholder="Digite o email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o Login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        <label for="name" class="form-label">Perfil</label>
        
        <select asp-for="Perfil" class="form-control">
            <option selected="">Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Padrao">Padrao</option>
        </select>

        @Html.ValidationMessageFor(x => x.Perfil)
    </div>

    <br>

    <button type="submit" class="btn btn-primary">Editar</button>
    <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>


</form>

