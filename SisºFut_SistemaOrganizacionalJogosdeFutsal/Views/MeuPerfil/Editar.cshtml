@using SisºFut_SistemaOrganizacionalJogosdeFutsal.Enums
@model UsuarioModel
@{
    ViewData["Title"] = "Editar Usuario";
}
<div class="text-center" style="font-family: Courier, monospace;">

    <h1 class="display-4">Editar Usuário</h1>

</div>


<form asp-controller="Usuario" asp-action="Editar" method="post">
    <div class="col-sm-12 col-md-4 col-md-offset-4" style="border: 2px solid #ccc; padding: 20px; margin: auto; border-radius: 10px; margin-top: 30px">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o Login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>


    <button type="submit" class="btn btn-primary">Editar</button>
 
    <a class="btn btn-secondary" asp-action="Index" asp-controller="MeuPerfil" role="button">Voltar</a>

</div>
</form>